<p id="notice"><%= notice %></p>

<h1>Listing Degrees</h1>

<table>
  <colgroup>
    <col width="10%">
    <col width="50%">
    <col width="20%">
    <col width="20%">
  </colgroup>

  <thead>
    <tr>
      <th></th>
      <th>Degree name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% counter = 0 %>
    <% @degrees.each do |degree| %>
      <% counter += 1 %>
      <tr>
        <td style="height: 30px;"><%= counter %></td>
        <td style="height: 30px;"><%= degree.degree_name %></td>
        <td style="height: 30px;"><%= button_to 'Edit', edit_page_degree_path(degree), class:"btn btn-xs btn-success" %></td>
        <td style="height: 30px;"><%= button_to 'Destroy', degree, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

